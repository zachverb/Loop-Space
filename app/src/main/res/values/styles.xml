<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/primary_dark</item>
    </style>

    <style name="SimpleDialog" parent="Material.App.Dialog.Simple">
        <item name="di_inAnimation">@anim/anim_scale_in</item>
        <item name="di_outAnimation">@anim/anim_scale_out</item>
    </style>

    <color name="primary_fab">#3f51b5</color>
    <color name="primary_dark_fab">#303f9f</color>
    <color name="ripple_fab">#F06292</color>
    <color name="accent_fab">#E91E63</color>
    <color name="accent_pressed_fab">#C2185B</color>
</resources>
